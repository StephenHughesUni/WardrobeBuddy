<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/etCollectionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Collection Name"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/montsfont"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Updated the ID to reflect its functionality and modified the text -->
    <Button
        android:id="@+id/btnCreateCollection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create/Add to Collection"
        app:layout_constraintTop_toBottomOf="@id/etCollectionName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Add a RecyclerView to display available items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAvailableItems"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnCreateCollection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Adjusted the ID to match the one used in the activity class -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnCreateCollection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
