<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- AppBarLayout with the Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#8025CE"
            android:elevation="4dp"
            app:titleTextColor="@color/white"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- The ImageView is placed here to be below all other components but above the CoordinatorLayout's background -->
    <ImageView
        android:id="@+id/image_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="200dp"
        app:layout_anchor="@id/toolbar">

        <!-- These IDs should match the IDs used in the ItemDetailActivity -->
        <TextView
            android:id="@+id/detail_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montsfont"
            android:text="Brand placeholder"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingTop="8dp"
            android:clickable="true"
            android:onClick="onBrandClicked" />

        <TextView
            android:id="@+id/detail_articleNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montsfont"
            android:text="Article number placeholder"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingTop="8dp"
            android:clickable="true"
            android:onClick="onArticleNumberClicked" />

        <TextView
            android:id="@+id/detail_price"
            android:layout_width="wrap_content"
            android:fontFamily="@font/montsfont"
            android:layout_height="wrap_content"
            android:text="Price placeholder"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingTop="8dp"
            android:clickable="true"
            android:onClick="onPriceClicked" />

        <LinearLayout
            android:id="@+id/size_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:visibility="gone">
            <!-- Size boxes will be added dynamically here -->
        </LinearLayout>

        <Button
            android:id="@+id/button_check_available_sizes"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/blanched_almond"
            android:text="Available Size"
            android:textColor="@android:color/black"
            android:textColorHighlight="@color/black"
            android:onClick="onAvailableSizesClicked" />

        <Button
            android:id="@+id/button_check_in_store_availability"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/blanched_almond"
            android:text="In-Store Info"
            android:textColor="@android:color/black"
            android:onClick="onInStoreInfoClicked" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/location_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
