<resources>
    <!-- Base application theme. -->
    <style name="Theme.FirebaseAuth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#8025CE</item> <!-- Change this line -->
        <item name="colorPrimaryVariant">#6E1EC1</item> <!-- Change this line -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Make sure windowActionBar is set to false -->
        <item name="windowActionBar">false</item>
        <!-- And windowNoTitle is true -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Other theme attributes -->
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <!-- Custom font family -->
        <item name="android:fontFamily">@font/montserratregular</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <!-- Define popup overlay attributes here -->
    </style>


</resources>